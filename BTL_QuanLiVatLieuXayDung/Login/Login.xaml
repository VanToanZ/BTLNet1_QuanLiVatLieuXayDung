<Window x:Class="BTL_QuanLiVatLieuXayDung.Login.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BTL_QuanLiVatLieuXayDung.Login"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="41" Margin="97,108,0,0" VerticalAlignment="Top" Width="720">
            <Label Content="Username" RenderTransformOrigin="0.505,1.337" Width="78" HorizontalAlignment="Left"/>
        </StackPanel>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="222,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="302" Height="17"/>
        <StackPanel HorizontalAlignment="Left" Height="41" Margin="97,181,0,0" VerticalAlignment="Top" Width="720">
            <Label Content="Mật khẩu" RenderTransformOrigin="0.505,1.337" Width="78" HorizontalAlignment="Left"/>
        </StackPanel>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="222,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="302" Height="18"/>
        <Button Content="Đăng nhập" HorizontalAlignment="Left" Margin="484,303,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.592,2.411" Click="Button_Click"/>

    </Grid>
</Window>
